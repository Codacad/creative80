  nav div.nav-menus .logohead {
    display: none;
  }
}
nav div.nav-menus .menu-side ul {
  list-style: none;
  display: flex;
  gap: 20px;
}
nav div.nav-menus .menu-side ul li a {
  text-decoration: none;
  transition: all 0.3s ease;
  color: #6c7a89;
  font-weight: 300;
  font-size: 14px;
}
