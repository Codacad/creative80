  nav div.nav-menus .menu-side {
    display: none;
  }
}
nav div.nav-menus div.search-button-side {
  position: absolute;
  background-color: white;
  right: 32px;
  display: flex;
  gap: 10px;
  align-items: center;
}
nav div.nav-menus div.search-button-side .search {
  width: 100%;
  position: relative;
  z-index: 10;
}
nav div.nav-menus div.search-button-side .search .search-input {
  position: relative;
  padding: 10px;
  width: 200px;
  height: 40px;
  background: transparent;
  border: 2px solid #EDF3FB;
  border-radius: 2px;
  outline: none;
  z-index: 0;
}
nav div.nav-menus div.search-button-side .search .search-input:focus {
  box-shadow: 0px 0px 1px 2px #e44b43;
}
nav div.nav-menus div.search-button-side .search .search-input::placeholder {
  opacity: 0.6;
}
@media (max-width: 950px) {
  nav div.nav-menus div.search-button-side .search .search-input {
    width: 150px;
    height: 30px;
    padding: 5px;
  }
}
nav div.nav-menus div.search-button-side .button a.login {
  padding: 10px;
  display: block;
  background-color: #e44b43;
  width: 100px;
  color: white;
  text-align: center;
  letter-spacing: 2px;
  text-decoration: none;
  border-radius: 5px;
}
@media (max-width: 950px) {
  nav div.nav-menus div.search-button-side .button a.login {
    width: 70px;
    font-size: 12px;
    padding: 8px;
  }
}
@media (max-width: 550px) {
  nav div.nav-menus div.search-button-side {
    right: 20px;
  }
}
@media (max-width: 550px) {
  nav div.nav-menus {
    padding: 2rem 1rem;
  }
}
nav div.logged-user div.user {
  display: flex;
  gap: 10px;
  align-items: center;
}
nav div.logged-user div.user a.logout {
  display: inline-block;
  padding: 3px 5px;
  background-color: #666e93;
  color: #fff;
  font-size: 12px;
  text-decoration: none;
  border-radius: 3px;
}

body {
